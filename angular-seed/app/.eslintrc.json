{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": "google",

    "rules": {
        "no-invalid-this": "off",
        "new-cap" : ["warn", { "capIsNewExceptions" : ["Deferred"]}]
    }

}
